<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/fb_dialog_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/feedbackCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:background="@color/feedback_cancel_back"
            android:onClick="onFeedbackBack"
            android:padding="2dp"
            android:text="@string/feedback_cancel"
            android:textColor="@color/feedback_cancel_text" />
        
        <Button
            android:id="@+id/feedbackSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:background="@color/feedback_send_back"
            android:onClick="onFeedbackReport"
            android:padding="2dp"
            android:text="@string/feedback_report"
            android:textColor="@color/feedback_send_text" />
        
    </LinearLayout>

</LinearLayout>
